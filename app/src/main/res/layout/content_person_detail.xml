<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".screen.persondetail.PersonDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/size_m">

            <TextView
                android:id="@+id/person_detail_gender_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_s"
                android:gravity="center_vertical"
                app:drawableLeftCompat="@drawable/ic_gender_female"
                tools:text="Mujer" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/size_m">

            <TextView
                android:id="@+id/person_detail_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_s"
                android:gravity="center_vertical"
                app:drawableLeftCompat="@drawable/ic_person"
                tools:text="Nombre y apellidos" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/person_detail_location_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/size_m">

            <TextView
                android:id="@+id/person_detail_location_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_s"
                android:gravity="center_vertical"
                app:drawableLeftCompat="@drawable/ic_location"
                app:drawableRightCompat="@drawable/ic_navigate_next"
                tools:text="DirecciÃ³n" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/size_m">

            <TextView
                android:id="@+id/person_detail_registration_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_s"
                android:gravity="center_vertical"
                app:drawableLeftCompat="@drawable/ic_registration_date"
                tools:text="01/01/2001" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/person_detail_email_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/size_m">

            <TextView
                android:id="@+id/person_detail_email_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_s"
                android:gravity="center_vertical"
                app:drawableLeftCompat="@drawable/ic_email"
                app:drawableRightCompat="@drawable/ic_navigate_next"
                tools:text="email@sample.com" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>